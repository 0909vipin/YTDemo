<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Add new Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container">
      <form action="/blog" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            name="title"
            id="title"
            placeholder=""
            value=""
          />
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Body</label>
          <textarea
            type="text"
            name="body"
            class="form-control"
            id="password"
            placeholder=""
            value=""
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Cover Image</label
          >
          <input
            type="file"
            name="coverImage"
            class="form-control"
            id="coverImage"
            placeholder=""
            value=""
          />
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
